<div class="container">
    <div class="row ">
        <div class="col-lg-9 mx-auto">
            <div class="card mt-2 mx-auto p-4 border-primary ">
                <div class="card-body bg-light">
                    <div class="container">
                      <form method="POST" action="/actualizar_usuario">
                        <div class="form-group">

                          <div class="row">
                              <div class="col-md-6">
                              <label for="nombre" id="robotic">Nombre del usuario*</label>
                              <input required  type="text" class="form-control mb-3"  name="username" value="{{dataValues.username}}" >
                             </div>
                            <div class="col-md-6">
                            <label for="nombre" id="robotic">Nombre completo*</label>
                           <input required type="text" class="form-control mb-3"  name="fullname" value="{{dataValues.fullname}}" placeholder="Ingrese su nombre completo">
                           </div>
                           </div>

                       <div class="row">
                        <div class="col-md-6">
                        <label for="nombre" id="robotic"><a data-toggle="modal" data-target="#exampleModal"><i class="fas fa-info-circle fa-sm mr-2"></i> </a>Correo Electrónico </label>
                        <input required type="text" class="form-control mb-3"  name="email" value="{{dataValues.email}}" >
                       </div>
                        <div class="col-md-6">
                        <div class="form-group" id="robotic"> <label for="form_need">Sexo*</label> <select id="form_need" name="sex" class="form-control"  data-error="Please specify your need.">
                        <option value=""selected disabled >--Seleccione--</option>
                        <option>Masculino</option>
                         <option>Femenino</option>
                        </select> </div>
                      </div>
                       </div>

                       <div class="row">
                         <div class="col">
                           <label for="nombre" id="robotic">Edad </label>
                           <input required type="number" class="form-control mb-3"  name="age" value="{{dataValues.age}}" min="17" max="100" >
                          </div>
                         <div class="col">
                          <label for="nombre" id="robotic">Télefono </label>
                          <input required type="text" class="form-control mb-3"  name="phone" value="{{dataValues.phone}}"  placeholder="9999-9999" required="required" data-error="Valid email is required." maxlength="9" oninput="if(this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);">
                          </div>
                          </div>
                     <div class="form-group" id="robotic"> <label for="form_message">Dirección*</label> <textarea id="form_message" name="address" class="form-control" placeholder="Escriba su dirección exacta" > {{dataValues.address}}</textarea> </div>
                   {{/each}}
                {{/if}}
        </div>

          <div class="row  text-center">
          <div class="col-md-12">
        <a class="btn btn-success btn-lg btn-block"  id="comment" data-toggle="modal" data-target="#exampleModalCenter">Actualizar Perfil</a>
        <!-- Modal --> 
          </div>
          </div>

