<h1 class="mt-3 text-center"> <b> Lista de Clientes</b></h1>
 <a class="text-center">-----------------------------------------------------------------------------------------------------------------------------------------------------------------------------</a>     
 


{{!-- Mostrar los mensajes en caso de existir --}}
{{#if mensajes}}
  {{#each mensajes}}
   <div class="alert {{type}}" role="alert">
      {{error}}
    </div>
  {{/each}}
{{/if}}

{{!--  Mostrar si existen los proyectos --}}
{{#if clientes }}
    {{#each clientes}}
       <div class="card">
         <div class="card-body">
         <h5> <b>Nombre :</b>  {{ dataValues.nombre  }}</h5>
         <h5> <b>Dirección:</b>  {{ dataValues.direccion  }}</h5>
         <h5> <b>Teléfono:</b>  {{ dataValues.telefono  }}</h5>
        </div>
       </div>   
        <a class="text-center">-----------------------------------------------------------------------------------------------------------------------------------------------------------------------------</a>     
         
    {{/each}}
{{/if}}


<div class="container">
  <div class="row">
    <div class="col text-center">
       <a href="/crear_cliente" class="btn btn-primary btn-lg text-center">Agregar un nuevo Cliente</a>
    </div>
  </div>
</div>