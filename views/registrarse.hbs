{{!-- Formulario de Registro --}}

{{!-- Validacion de sequelize que la trae a traves del modelo --}}
{{#if error}}
    <p>{{error}}</p>
{{/if}}

<form class="form-signin" action="" method="POST">

    <div class="mb-4 text-center">
        <h1>Regístrate en Taskily</h1>
        <p>Y comienza a utilizar nuestro aclamado gestor de proyectos</p>
    </div>
     <div class="form-label-group">
        <input type="text" name="fullname" id="fullname" placeholder="Junnior" required autofocus>
        <label for="email">Nombre Completo</label>
    </div>
    <div class="form-label-group">
        <input type="email" name="email" id="email" placeholder="jmartinez@gmail.com" required>
        <label for="email">Correo electrónico</label>
    </div>
     <div class="form-label-group">
        <input type="password" name="password" id="password"  required>
        <label for="email">Contraseña</label>
    </div>
    <div class="mb3">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Registrarse</button>
        <p class="tect-center text-muted mt-5">2020 Negocios Web UNICAH</p>
    </div>
</form>