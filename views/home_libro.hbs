<hr />
<h5 class="text-center">
  <b>
    Estantería BookBuy™
  </b>
</h5>
<hr />

{{! Mostrar los mensajes en caso de existir }}
{{#if mensajes}}
  {{#each mensajes}}
    <div class="alert {{type}}" role="alert">
      {{error}}
    </div>
  {{/each}}
{{/if}}

<div class="container d-flex">
  <div class="card-deck">
    {{#if libros}}
      {{#each libros}}
        <div
          class="col-xs-12 col-sm-6 col-md-4 col-lg-3 col-xl-4 mb-3"
          id="body"
        >
          <div class="card mt-3" id="cardHome">
            <img
              src="./images/libroVector3.png"
              class="card-img-top"
              alt="..."
            />

            <div class="card-text text-center">
              <div class="collapse  mt-2" id="collapseExample">
                <div class="card card-body">
                  {{dataValues.descripcion}}
                </div>
              </div>

              <button
                type="button"
                title="{{dataValues.nombre}}"
                class="btn btn-success"
                data-container="body"
                data-toggle="popover"
                data-placement="right"
                data-content="{{dataValues.descripcion}}"
              >
                <i class="fas fa-eye">
                  Ver resumen
                </i>
              </button>
            </div>

            <div class="card-body">
              <h4 class="card-title mt-3 text-center">
                {{dataValues.nombre}}
              </h4>
              <div class="card-text text-center">
                <b>
                  Autor:
                </b>
                {{dataValues.autor}}
              </div>
              <div class="card-text text-center">
                <b>
                  Categoría:
                </b>
                {{dataValues.categoria}}
              </div>
              <div class="card-text text-center">
                <b>
                  Vendedor:
                </b>
                {{dataValues.vendedor}}
              </div>

              <div class="card-text text-center mt-4">
                <h4>
                  <Strong>
                    Precio L.{{dataValues.precio}}
                  </Strong>
                </h4>
                <form action="/checkout" method="POST">
                  <input
                    type="text"
                    value={{dataValues.precio}}
                    name="precio"
                    hidden
                  />
                  <input
                    type="text"
                    value="{{dataValues.nombre}}"
                    name="nombreLibro"
                    hidden
                  />
                  <input
                    type="text"
                    value={{dataValues.emailVendedor}}
                    name="emailVendedor"
                    hidden
                  />
                  <input
                    type="text"
                    value={{dataValues.id}}
                    name="idLibro"
                    hidden
                  />
                  <input
                    type="text"
                    value={{dataValues.usuarioId}}
                    name="idVendedor"
                    hidden
                  />
                  <input
                    type="text"
                    value={{dataValues.beneficioBookBuy}}
                    name="beneficioBookBuy"
                    hidden
                  />
                  <input
                    type="text"
                    value={{dataValues.beneficioUsuario}}
                    name="beneficioUsuario"
                    hidden
                  />
                  <input
                    type="text"
                    value={{dataValues.beneficioStripe}}
                    name="beneficioStripe"
                    hidden
                  />

                  <script
                    src="https://checkout.stripe.com/checkout.js"
                    class="stripe-button oculto"
                    data-key="pk_test_51H5se7H7MJGBcY4YCYjUeBwgg0jBunZDEGDZZ7kPIqs3rhk8FvnWPQ3gHMhQ7VOx7KaeYBZlhEnjNq0clLnPi24C00rEkpgYmn"
                    data-name="Book Buy"
                    data-image="./images/book.png"
                    data-description="Compra Segura"
                    data-locale="auto"
                  ></script>
                </form>

                <hr />
                <div class="text-left">
                  <small>
                    Publicado {{dataValues.fecha}}
                  </small>
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    {{else}}
      {{! <div class="row">
        <li class="list-group-item list-group-item-primary">
          <h5>
            Aún no hay libros disponibles para realizar compras
          </h5>
        </li>
      </div> }}
    {{/if}}
  </div>
</div>
<hr>
<div class="container mt-5">
  <div class="col text-center mb-3 mt-6">
    <a href="/crear_libro" class="btn btn-success btn-lg text-center">
      Vender un nuevo libro
    </a>
  </div>
</div>
<br />

<div style="height: 60px;">
</div>

<style>
  #boton{display:none;}
</style>