<h1 class="mt-3 text-center"><b>Lista de Libros</b> </h1>
          <a class="text-center">-----------------------------------------------------------------------------------------------------------------------------------------------------------------------------</a>



{{!-- Mostrar los mensajes en caso de existir --}}
{{#if mensajes}}
  {{#each mensajes}}
   <div class="alert {{type}}" role="alert">
      {{error}}
    </div>
  {{/each}}
{{/if}}

{{!--  Mostrar si existen los proyectos --}}

<div class="container col-5">
{{#if libros }}
    {{#each libros}}
         <div class="card">
         <div class="card-body">
         {{!-- Averiguar como mostrar las imagenes --}}
         <h5> <b>Nombre :</b>  {{ dataValues.nombre  }}</h5>
         <h5> <b>Autor:</b> {{ dataValues.autor  }}</h5>
         <h5> <b>Precio:</b> L.{{ dataValues.precio  }}</h5>
         <h5> <b>Fecha:</b> {{ dataValues.fecha  }}</h5>
         <h5> <b>ISBN:</b> {{ dataValues.ISBN  }}</h5>
         <label for="exampleFormControlTextarea1 text-center"><h5><b> Descripci√≥n:</b></h5></label>
         <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"  disabled > {{ dataValues.descripcion  }}</textarea>
          <form method="POST" action="/comprar_libro" class="text-center">
                <input type="hidden" class="form-control text-center" id="nombre" name="nombre" value="{{ dataValues.nombre }}" >
                <button type="submit" class="btn btn-primary mt-2 ">Adquirir libro</button>
          </form>
        </div>
       </div>
