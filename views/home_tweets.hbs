<h1 class="mt-3 text-center"><b>Tweets</b> </h1>
          <a class="text-center">-----------------------------------------------------------------------------------------------------------------------------------------------------------------------------</a>     


{{!-- Mostrar los mensajes en caso de existir --}}
{{#if mensajes}}
  {{#each mensajes}}
   <div class="alert {{type}}" role="alert">
      {{error}}
    </div>
  {{/each}}
{{/if}}

{{!--  Mostrar si existen los proyectos --}}
{{#if tweets }}
    {{#each tweets}}
       <div class="card">
         <div class="card-body">
         <h5> <b>Nombre :</b>  {{ dataValues.usuarioId  }}</h5>
         <h5> <b>Autor:</b> {{ dataValues.contenido  }}</h5>
        </div>
       </div>      
          <a class="text-center">-----------------------------------------------------------------------------------------------------------------------------------------------------------------------------</a>     
    {{/each}}
{{/if}}



<form method="POST" action="/crear_tweet">
  <div class="form-group">
    <label for="nombre"> <b>Id del Usuario</b> </label>
    <input type="text" class="form-control" id="usuarioId" name="nombre">
<br>
       <label for="nombre"> <b>Comentario</b> </label>
    <input type="text" class="form-control" id="contenido" name="autor">
<br>
    </div>
      <button type="submit" class="btn btn-primary " >Comentar</button>
</form>