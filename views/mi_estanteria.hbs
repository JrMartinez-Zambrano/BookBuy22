<hr>
<h5 class=" text-center mb-5"><b>{{usuario.username}}</b> estos son los libros que tienes tu estantería de venta  </h5>
  <hr>
  


{{!-- Mostrar los mensajes en caso de existir --}}
{{#if mensajes}}
  {{#each mensajes}}
   <div class="alert {{type}}" role="alert">
      {{error}}
    </div>
  {{/each}}
{{/if}}

<div class="container text-center">
          {{!-- Mostrar los proyectos (si existen) --}}
    {{#if libros}}
        {{#each libros}}
        <div class="row mr-auto mb-2">
          <div class="row col-8 mb-2">
            <a href="#" class="list-group-item list-group-item-action list-group-item-success ">{{ dataValues.nombre  }}</a> 
          </div>
          <div class="row col-4 ml-2 mb-2">
                 <a type="button" href="/libro/{{dataValues.url}}" class="btn btn-primary  ml-2 mt-1">Editar</a>
                <button name="quitar-libro"   data-libro-url={{dataValues.url}} type="button" class="btn btn-danger ml-2 mt-1">Quitar</button>
          </div>
        </div>
     
        {{/each}}
    {{else}}
      <li class="list-group-item list-group-item-primary"><h5>¿Qué esperas? vende un libro con nosotros</h5> </li>
{{/if}}
</div>







<hr>
  <div class="row">
    <div class="col text-center mb-3 mt-6">
       <a href="/crear_libro" class="btn btn-success btn-lg text-center mt-3">Añadir un nuevo libro a mi estantería</a>
    </div>
      </div>
