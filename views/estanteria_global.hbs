<hr />
<h4 class="text-center mb-3">
  <b>
    <i class="fas fa-globe mr-2"></i>
    Estantería Global
  </b>
</h4>
<hr />


{{! Mostrar los mensajes en caso de existir }}
{{#if mensajes}}
  {{#each mensajes}}
    <div class="alert {{type}}" role="alert">
      {{error}}
    </div>
  {{/each}}
{{/if}}

<div class="container text-center">
<div class="table-responsive">
<table class="table table-hover table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">
          
             <a>Título del libro</a> 
          
        </th>
        <th scope="col">
          
            <a>Vendedor</a>
          
        </th>
        <th scope="col">
         
            <a>Fecha de Ingreso</a>
          
        </th>
        <th scope="col">
          
            <a>Precio</a>
          
        </th>
        <th scope="col">
          
            <a>Beneficio</a>
          
        </th>
      </tr>
    </thead>
    <tbody>
      {{#if librosAll}}
        {{#each librosAll}}
          <tr>
            <td >
               <a>{{dataValues.nombre}}</a>
            </td>
            <td>
              <a>{{dataValues.emailVendedor}}</a>
            </td>
            <td>
              <a>{{dataValues.fecha}}</a>
            </td>
            <td>
             <a> L.{{dataValues.precio}}</a>
            </td>
               <td>
             <a> L.{{dataValues.beneficioBookBuy}}</a>
            </td>
          </tr>
        {{/each}}
      {{else}}
        <div class="alert alert-info mt-4" role="alert">
          Aún no hay libros en venta en la estantería global
        </div>
      {{/if}}
    </tbody>
  </table>
</div>
