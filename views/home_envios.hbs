<hr />
<h4 class="text-center mb-3">
  <b>
    <i class="fas fa-shipping-fast mr-2"></i>
    Envios pendientes
  </b>
</h4>
<hr />

{{! Mostrar los mensajes en caso de existir }}
{{#if mensajes}}
  {{#each mensajes}}
    <div class="alert {{type}}" role="alert">
      {{error}}
    </div>
  {{/each}}
{{/if}}

<div class="container text-center">
  {{! Mostrar los proyectos (si existen) }}

  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">
          <b>
            Comprador
          </b>
        </th>
        <th scope="col">
          <b>
            Nombre del libro
          </b>
        </th>
        <th scope="col">
          <b>
            Dirección de Entrega
          </b>
        </th>
        <th scope="col">
          <b>
            teléfono
          </b>
        </th>
        <th scope="col">
          <b>
            Precio
          </b>
        </th>
      </tr>
    </thead>
    <tbody>
      {{#if envios}}
        {{#each envios}}
          <tr>
            <th scope="row">
              {{dataValues.emailComprador}}
            </th>
            <td>
              {{dataValues.nombreLibro}}
            </td>
            <td>
              {{dataValues.direccionComprador}}
            </td>
            <td>
              {{dataValues.telefono}}
            </td>
            <td>
              L.{{dataValues.precioCompra}}
            </td>
          </tr>
        {{/each}}
      {{else}}
        <div class="alert alert-info mt-4" role="alert">
          Aún no hay envios pendientes
        </div>
      {{/if}}
    </tbody>
  </table>
</div>
<hr />

<div style="height: 210px;">
</div>